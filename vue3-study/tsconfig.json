{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2020", "DOM"],
    "types": ["element-plus/global"],
    "jsx": "preserve",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
